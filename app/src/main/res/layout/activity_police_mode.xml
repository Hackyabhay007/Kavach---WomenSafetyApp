<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PoliceMode">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/orange"
            android:elevation="20dp"
            android:padding="10dp"
            app:navigationIcon="@drawable/police_car_light_svgrepo_com"
            app:title="Kavach - Police Mode"
            app:titleTextColor="@color/white" />
        <!--            app:menu="@menu/top_app_bar"-->


    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="SCAN QR CODE"
        android:textAlignment="center"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="377dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.camera.view.PreviewView
                android:id="@+id/camerax_viewFinder"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="325dp"
                android:visibility="gone"
                app:srcCompat="@drawable/female_avatar_girl_face_woman_user_2_svgrepo_com__2_"
                tools:visibility="gone" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>