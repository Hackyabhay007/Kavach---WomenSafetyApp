<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".police_dashboard">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cameraTilt="30"
            app:uiRotateGestures="true"
            app:uiZoomControls="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/DeviceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:clipToPadding="false"
                android:paddingBottom="10dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/orange"
                app:cardCornerRadius="40dp"
                app:cardUseCompatPadding="false"
                tools:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="clip_horizontal|center_horizontal|top|left|center_vertical"
                    android:layout_margin="1dp"
                    android:clipToPadding="false"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="40dp"
                    app:cardUseCompatPadding="false"
                    tools:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/AadhaarId"
                                    android:layout_width="57dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:text="Aadhaar.No"
                                    android:textColor="@color/cardview_dark_background" />

                                <TextView
                                    android:id="@+id/Aadhaar_user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:padding="10dp"
                                    android:text="null"
                                    android:textColor="@color/cardview_dark_background" />

                            </LinearLayout>

                            <View
                                android:id="@+id/divider9"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="?android:attr/listDivider" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fetchtime"
                                    android:layout_width="57dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:text="Fetch Time"
                                    android:textColor="@color/cardview_dark_background" />

                                <TextView
                                    android:id="@+id/data_fetch_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:padding="10dp"
                                    android:text="Loafing..."
                                    android:textColor="@color/cardview_dark_background" />

                            </LinearLayout>

                            <View
                                android:id="@+id/divider7"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="?android:attr/listDivider" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/esfwefertqfetfergre"
                                    android:layout_width="57dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:text="Fetch Date"
                                    android:textColor="@color/cardview_dark_background" />

                                <TextView
                                    android:id="@+id/data_fetchdate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:padding="10dp"
                                    android:text="Loafing..."
                                    android:textColor="@color/cardview_dark_background" />

                            </LinearLayout>

                            <View
                                android:id="@+id/divider6"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="?android:attr/listDivider" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/esfwefertetfergre"
                                    android:layout_width="57dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:text="Speed"
                                    android:textColor="@color/cardview_dark_background" />

                                <TextView
                                    android:id="@+id/alert_speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:padding="10dp"
                                    android:text="Loafing..."
                                    android:textColor="@color/cardview_dark_background" />

                            </LinearLayout>

                            <View
                                android:id="@+id/divider8"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="?android:attr/listDivider" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/esfwefertetfergre"
                                    android:layout_width="57dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:text="Battery"
                                    android:textColor="@color/cardview_dark_background" />

                                <TextView
                                    android:id="@+id/data_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:padding="10dp"
                                    android:text="Loafing..."
                                    android:textColor="@color/cardview_dark_background" />

                            </LinearLayout>

                            <View
                                android:id="@+id/divider12"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="?android:attr/listDivider" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textVfriew19"
                                    android:layout_width="57dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:text="Fullname"
                                    android:textColor="@color/cardview_dark_background" />

                                <TextView
                                    android:id="@+id/alert_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:padding="10dp"
                                    android:text="20 Metres"
                                    android:textColor="@color/cardview_dark_background" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="vertical">

            <Button
                android:id="@+id/open_bottom_sheet"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:padding="20dp"
                android:rotation="0"
                app:icon="@drawable/arrow_up_337_svgrepo_com" />
        </LinearLayout>

    </FrameLayout>



</LinearLayout>